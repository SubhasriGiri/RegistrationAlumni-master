<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alumni.cit.edu.in.alumni.Registration"
    android:background="@drawable/cit">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="600dp"
        android:paddingTop="80dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum=" 1"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERSONAL DETAILS"
            android:paddingTop="90dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"/>


        <EditText
            android:id="@+id/editUsername"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="USERNAME:"
            android:paddingTop="50dp"
            android:textSize="15dp"
            android:textColorHint="#800000"
             />


        <EditText
            android:id="@+id/editEmail"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="EMAIL:"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
             />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="PASSWORD:"
            android:inputType="textPassword"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
             />

        <EditText
            android:id="@+id/editMobileno"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="MOBILE NO:"
            android:ems="10"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
             />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/editGender"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="GENDER:"
            android:textSize="15dp"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            />

        <EditText
            android:id="@+id/editAddress"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="ADDRESS:"
            android:maxLength="60"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/editCountry"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="COUNTRY[Currently residing in]:"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/editState"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="STATE:"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/editPincode"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="PINCODE:"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />



        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OFFICIAL DETAILS"
            android:paddingTop="90dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editProfession"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="PROFESSION:"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/editCompanyname"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="COMPANY NAME:"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/editSpecialization"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="SPECIALIZATION:"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/editCaddress"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint=" COMPANY ADDRESS:"
            android:maxLength="60"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />




        EditText
            android:id="@+id/editDepartment"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="DEPARTMENT:"
            android:textSize="15dp"
            android:paddingTop="30dp"
            android:textColorHint="#800000"

            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GRADUATION DETAILS"
            android:paddingTop="90dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"/>


        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/editDepartment"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="DEPARTMENT:"
            android:textSize="15dp"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            />

        <EditText
            android:id="@+id/editRegno"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="REG NO:"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/editBatch"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="BATCH [eg:2005-2009]:"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />


        <EditText
            android:id="@+id/editYear"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:hint="YEAR OF PASSING:"
            android:paddingTop="30dp"
            android:textColorHint="#800000"
            android:textSize="15dp"
            />



        <Button
            android:id="@+id/registerButton"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Register"
            android:textSize="17sp"
            android:layout_weight="0.10" />

        <TextView
            android:id="@+id/loginRedirect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="0dp"
            android:text="Already Registered? Click to Login!!!"
            android:textSize="23sp"
            android:textColor="#191970"
            android:textStyle="bold"
            android:layout_weight="1.22" />

    </LinearLayout>
    </ScrollView>


</RelativeLayout>
